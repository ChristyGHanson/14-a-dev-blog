{{!-- blog goes here--}}

<h2>Create a Post</h2>

<form id="create-form">
    {{!-- title of blog --}}
    <div class="form-group">
        <label for="title-input">Title</label>
        <input type="text" class="form-control" id="title-input" placeholder="title">
    </div>


    <div class="form-group pb-2">
        {{!-- body of blog --}}
        <label for="body-input">Content</label>
        <textarea class="form-control" id="body-input"></textarea>
    </div>

    {{!-- submit event of the form --}}
    {{!-- event handler is in createBlog.js --}}
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="/js/createBlog.js"></script>